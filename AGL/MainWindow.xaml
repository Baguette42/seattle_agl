<Window x:Class="AGL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AGL Seattle" Height="350" Width="525">
    <Grid>
        <TabControl Margin="0">
            <TabItem Header="Passerelle A" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="Auto">
                <DockPanel>
                    <DockPanel LastChildFill="False" VerticalAlignment="Top" DockPanel.Dock="Bottom" Margin="0,10,0,0" >
                        <Button Name="validatePasserelleA"  Content="Valider"  Margin="5" Click="validatePasserelleA_Click" DockPanel.Dock="Bottom" />
                    </DockPanel>
                    <DockPanel LastChildFill="False" VerticalAlignment="Top" DockPanel.Dock="Bottom" Margin="0,10,0,0" >
                        <Button Name="loadBesoinsButton"  Content="Charger besoins (.xlsx)"  Margin="5" Click="loadBesoins_Click"/>
                        <Button Name="loadMCDButton"  Content="Charger MCD (.xml)"  Margin="5" Click="loadMCD_Click"/>
                        <Button Name="loadUseCaseButton"  Content="Charger les uses cases (.xml)" Margin="5" Click="loadUseCase_Click"/>
                    </DockPanel>
                </DockPanel>
            </TabItem>
            <TabItem Header="Passerelle B" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="Auto">

            </TabItem>
            <TabItem Header="Passerelle C" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="Auto">

            </TabItem>
            <TabItem Header="Passerelle D" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="Auto">

            </TabItem>
        </TabControl>
        <Popup Name="STB_valid_popup"  VerticalOffset="20"  PlacementRectangle="300,140,100,150" PopupAnimation="Fade"  AllowsTransparency="True" Margin="300,100,100,10" Placement="Mouse"  IsOpen="False">
            <Border BorderBrush="Black" BorderThickness="1" 
                Background="AliceBlue">
                <StackPanel Orientation="Horizontal">
                    <Grid Width="142">
                        <TextBlock  Name="textBlock2" TextWrapping="Wrap" Background="AntiqueWhite" TextAlignment="Center">
                            La STB a été générée dans le dossier spécifié
                        </TextBlock>

                    </Grid>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
